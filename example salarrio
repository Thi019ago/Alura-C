#include <iostream>
#include <locale.h>
using namespace std;

int main (){
	
	float sal, tot, diff, x;
	
	cout << "Insira o valor do seu salrio\n";
	cin >> sal;
	
	cout << "O seu salario antes do reajuste e \n" << sal;
	
	if (x <= 280){
		tot = sal*1.2;
		diff = tot - sal;
			cout << "O seu novo salario e " <<tot << "o aumento de 20% e "<< diff <<"\n";
	}
	else if (x > 280 and x <= 700){
		tot = sal*1.15;
		diff = tot - sal;
			cout << "O seu novo salario e " <<tot << "o aumento de 15% e "<< diff <<"\n";
	}
	else if (x > 700 and x <= 1500){
		tot = sal*1.1;
		diff = tot - sal;
			cout << "O seu novo salario e " <<tot << "o aumento de 10% e "<< diff <<"\n";
	}
	else (x > 1500){
		tot = sal*1,05;
		diff = tot - sal;
			cout << "O seu novo salario e " <<tot << "o aumento de 5% e "<< diff <<"\n";
	}
	
	cout << "o seu novo salarrio com o reajuste e \n"<< tot;
	system ("pause");
		return 0;
}
